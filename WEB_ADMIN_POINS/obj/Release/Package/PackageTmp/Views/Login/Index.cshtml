
@{
    ViewBag.Title = "Web Admin Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<!-- /.login-logo -->
<div class="card mb-5">
    <div class="card-body login-card-body">
        <h3 class="text-center font-weight-bold my-4" style="color: black;">Login</h3>
        <h3 class="text-center font-weight-bold my-4" style="color: black;">Poins Web Admin</h3>
        @*<center>
            <a href="#" class="brand-link">
                <img src="~/Content/poins.png" class="brand-image">
                <h3 class="brand-text font-weight-light">POINS WEB ADMIN</h3>
            </a>
        </center>*@
        <form id="form_login" method="post">
            <input type="text" id="web_link" value="@Session["Web_Link"]" hidden />
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="nrp" id="nrp" placeholder="NRP" onkeypress="return runScript(event)" value="@Session["uu"]" required>
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="password" class="form-control" name="password" id="password" placeholder="Password" onkeypress="return runScript(event)" value="@Session["up"]" required>
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>

            <div>
                <!-- /.col -->
                <div class="mx-auto">
                    <button type="button" class="btn btn-primary btn-block text-center" onclick="Login()" onkeypress="return runScript(event)">Sign In</button>
                </div>
                <!-- /.col -->
            </div>
            </br>

        </form>

    </div>
    <!-- /.login-card-body -->
</div>


<script type="text/javascript" src="~/Js/Login.js"></script>

